# Variables d'entorn per Docker Compose - Cooperativa
# Copia aquest fitxer a .env i omple les variables amb les teves dades

# Django
DJANGO_SECRET_KEY=canvia_aquesta_clau_secreta_django_per_una_de_segura
DEBUG=False

# Base de dades PostgreSQL
POSTGRES_DB=nom_de_la_teva_cooperativa_db
POSTGRES_USER=nom_de_la_teva_cooperativa_user
POSTGRES_PASSWORD=contrasenya_segura_de_la_base_de_dades
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Hosts permesos (canvia pel teu domini)
ALLOWED_HOSTS=el-teu-domini.com,www.el-teu-domini.com,localhost,127.0.0.1

# CORS (canvia pel teu domini)
CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOWED_ORIGINS=https://el-teu-domini.com,https://www.el-teu-domini.com

# CSRF (canvia pel teu domini)
CSRF_TRUSTED_ORIGINS=https://el-teu-domini.com,https://www.el-teu-domini.com

# IMPORTANT:
# 1. Canvia totes les contrasenyes i claus per valors segurs
# 2. Substitueix 'el-teu-domini.com' pel teu domini real
# 3. Guarda aquest fitxer com .env (sense .example)
# 4. No pugis mai el fitxer .env al repositori (est√† al .gitignore)
